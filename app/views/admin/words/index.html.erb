<p id="notice"><%= notice %></p>

<h1>Listing Word</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
        <td><%= word.category_id %></td>
        <td><%= link_to 'Show', [:admin, word] %></td>
        <td><%= link_to 'Edit', edit_admin_word_path(word) %></td>
        <td><%= link_to 'Destroy', [:admin, word], method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

