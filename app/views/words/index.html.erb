<% provide(:title, "Word list") %>

<h1> Word List</h1>

<div class="container">
	<div class="row col-md-12">
		<div class="row container col-md-12 filter_menu" style="border:solid 1px;">
			
			<h3>Category</h3>

			<%= form_tag "/words", method: :get, remote: true do %>
			<!-- select option -->
			  <div class="col-md-3">
				  	<%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name), :include_blank => 'All Category', class: "form-control" %>
			  </div>
			<!-- radio button -->
			  <div class="col-md-6 filter-radio">
				  <label class="col-md-2">
				  	<%= radio_button_tag 'status', 'leaned' , class: "form-control"%>learned
				  </label>
			
				  <label class="col-md-3">
				  	<%= radio_button_tag 'status', 'not_learned' , class: "form-control"%>not learned
				  </label >
			  
				  <label class="col-md-2">
				  	<%= radio_button_tag 'status', 'all' , class: "form-control"%> &emsp;All
				  </label>
				  <label class="col-md-2">
				  	<input type="submit" class="btn btn-primary" value="Filter">
				  </label>
			  </div>

			<!-- button submit -->
			
			<% end %>

		</div>

		<div class="row col-md-3">
			<table class="table table-hover filter-result-table">
				<thread>
					<tr>
						<th>Vietnamese</th>
						<th>Japanese</th>
					</tr>
				</thread>

				<tbody class="filter-result">
					<% @words.each do |word| %>
						<tr>
							<td><%= word.content %></td>
						<% word.word_answers.each do |answer| %>
							<% if answer.correct %>
								<td><b><%= answer.content %></b></td>
							<% end %>
						<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>


	
</div>
